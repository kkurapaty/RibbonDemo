<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:RibbonDemo.Controls">

    <SolidColorBrush x:Key="OrangeYellowBrush" Color="Orange"/>
    <SolidColorBrush x:Key="YellowBrush" Color="Yellow"/>
    <SolidColorBrush x:Key="BlackBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="GrayBrush" Color="#FF434343"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BlueBrush" Color="DodgerBlue"/>

    <Style x:Key="TextBlock.Style" TargetType="TextBlock">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="TextBlock.Header.Style" BasedOn="{StaticResource TextBlock.Style}" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

  </ResourceDictionary>